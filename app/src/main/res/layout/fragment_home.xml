<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartshanta.smartshanta.HomeFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:scaleType="centerInside"
        android:src="@drawable/smart_shanta_logo"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="120dp"
        android:layout_height="match_parent">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="3"
            android:columnCount="2">
            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="22dp"
                android:drawableTop="@drawable/ic_my_location_black_48dp"
                android:text="Locate Map"
                android:background="@color/orange"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@+id/map_btn"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="22dp"
                android:drawableTop="@drawable/ic_speaker_phone_black_48dp"
                android:text="Find Shanta"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:id="@+id/find_btn"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:drawableTop="@drawable/ic_business_center_black_48dp"
                android:text="Get Number"
                android:padding="22dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:id="@+id/get_bag_num_btn"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:drawableTop="@drawable/ic_location_on_black_48dp"
                android:text="Set My Number"
                android:layout_rowWeight="1"
                android:padding="22dp"
                android:background="@color/orange"
                android:layout_columnWeight="1"
                android:id="@+id/set_user_num_btn"/>


        </GridLayout>


        <android.support.design.widget.FloatingActionButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/connect_btn"
            app:borderWidth="0dp"
            app:elevation="6dp"
            android:src="@drawable/ic_bluetooth_searching_white_36dp"
            app:pressedTranslationZ="12dp"
            android:layout_gravity="center"/>
    </FrameLayout>



</FrameLayout>
